<div class="row">
  <div class="col-xs-12 col-sm-3">
    <span>
      Restaurant
    </span>
    <span>
      {{reservation.restaurant.name}}
    </span>
  </div>
  <div class="col-xs-12 col-sm-3">
    <span>
      Reserved For
    </span>
    <span>
      {{datetime-format reservation.reservedOn "dddd, MMM D, YYYY hh:mm A"}}
    </span>
  </div>
  <div class="col-xs-12 col-sm-3">
    <span>
      Max number of Guests
    </span>
    <span>
      {{reservation.table.numberOfChairs}}
    </span>
  </div>
  <div class="col-xs-12 col-sm-3">
  <span></span>
  {{#if reservation.canceled}}
    CANCELED
  {{else}}
    <button class="form-button form-button-extra-small cancel-reservation" onclick={{action "onCancelReservation" reservation.id}}>
      CANCEL RESERVATION
    </button>
  {{/if}}
  </div>

</div>